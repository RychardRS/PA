#include <stdio.h>
#include <stdlib.h>

int main()
{
    /*Considerando a declaração int mat[4], *p, x;, quais das seguintes expressões são válidas?
Justifique.*/

    int mat[4] = {0, 1, 2, 3};
    int *p, x;
    p = mat + 1;  // válida
    p = mat++; // inválida
    p = ++mat; // inválida
    x = (*mat)++; // inválida
  printf("valor de p: %d", *p);
  /*p = 1*/

    return 0;
}
